{
  "name": "guido",
  "private": true,
  "version": "1.0.0-alpha",
  "type": "module",
  "homepage": "http://quotentiroler.github.io/Guido/",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:packages && vite build",
    "build:ui": "vite build",
    "build:cli": "npm run build -w @guido/cli",
    "build:mcp": "npm run build -w @guido/mcp-server",
    "build:core": "npm run build -w @guido/core",
    "build:types": "npm run build -w @guido/types",
    "build:logger": "npm run build -w @guido/logger",
    "build:packages": "npm run build:types && npm run build:core && npm run build:logger && npm run build:mcp && npm run build:cli",
    "typecheck": "tsc --noEmit",
    "lint": "npm run typecheck && eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "validate": "npx tsx packages/cli/src/validateTemplate.ts",
    "schema-to-guido": "npx tsx packages/cli/src/schemaToGuido.ts",
    "guido-to-schema": "npx tsx packages/cli/src/guidoToSchema.ts",
    "generate:guido": "npx tsx packages/cli/src/schemaToGuido.ts public/registries/registry.schema.json -o public/templates/registry.guido.json --filename custom.registry.json"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.50",
    "@ai-sdk/google": "^2.0.44",
    "@ai-sdk/openai": "^2.0.74",
    "@ai-sdk/openai-compatible": "^1.0.28",
    "@gera2ld/tarjs": "^0.3.1",
    "@guido/cli": "*",
    "@guido/core": "*",
    "@guido/logger": "*",
    "@guido/mcp-server": "*",
    "@guido/types": "*",
    "@tailwindcss/vite": "^4.1.17",
    "ai": "^5.0.104",
    "classnames": "^2.5.1",
    "interweave": "^13.1.0",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "^3.3.1",
    "localforage": "^1.10.0",
    "marked": "^17.0.1",
    "papaparse": "^5.5.1",
    "path": "^0.12.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/js-yaml": "^4.0.9",
    "@types/papaparse": "^5.3.15",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "^4.0.14",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.14",
    "gh-pages": "^6.2.0",
    "globals": "^16.5.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.11.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  }
}